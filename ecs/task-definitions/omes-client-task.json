{
  "family": "omes-client",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "omes-client",
      "image": "<ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com/sdk-perf-tests-rep:omes-client-latest",
      "essential": true,
      "secrets": [
        {
          "name": "TEMPORAL_OMES_AUTH_HEADER",
          "valueFrom": "arn:aws:secretsmanager:<REGION>:<ACCOUNT_ID>:secret:<SECRET_NAME>"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sdk-perf-tests",
          "awslogs-region": "<REGION>",
          "awslogs-stream-prefix": "omes-client"
        }
      }
    }
  ]
}